{
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2020",
  },
  "baseUrl": "./src",
  "paths": {
    "@controllers/*": [
      "./src/controllers/*"
    ],
    "@entities/*": [
      "./src/entities/*"
    ],
    "@database/*": [
      "./src/database/*"
    ],
    "@useCases/*": [
      "./src/useCases/*"
    ],
    "@repositories/*": [
      "./src/repositories/*"
    ]
  }
}